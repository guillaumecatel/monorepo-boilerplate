---
import { getEntry, render } from 'astro:content'

import { getLocale, locales, localizeHref } from '@/i18n/runtime'
import Layout from '@/layouts/Layout.astro'

const currentLocale = getLocale()

const cookiePolicyPage = await getEntry(
  'pages',
  `cookie-policy-${currentLocale}`,
)

if (
  cookiePolicyPage === undefined ||
  cookiePolicyPage.data.locale !== currentLocale
)
  return Astro.rewrite('/404')

const metadata = {
  title: cookiePolicyPage.data.title,
  description: cookiePolicyPage.data.description,
  alternates: locales.map((locale) => ({
    locale,
    href: localizeHref('cookie-policy', { locale }),
  })),
}

const { Content } = await render(cookiePolicyPage)
---

<Layout metadata={metadata}>
  <main id='main-content'>
    <Content />
  </main>
</Layout>
