{
  "name": "@{{organizationScopeName}}/{{kebabCase name}}",
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "description": "{{sentenceCase description}}",
  "keywords": {{{keywordsExtract description}}},
  "homepage": "{{organizationRepositoryUrl}}#readme",
  "author": "{{organizationName}} <{{organizationEmail}}>",
  "repository": {
    "type": "git",
    "url": "{{organizationRepositoryUrl}}.git"
  },
  "bugs": {
    "url": "{{organizationRepositoryUrl}}/issues"
  },
  "files": ["./dist"],
  "exports": {
    "./alias": "./src/alias.ts",
    "./guards": "./src/guards.ts",
    ".": "./src/index.ts"
  },
  "publishConfig": {
    "exports": {
      "./alias": {
        "import": "./dist/alias.js",
        "require": "./dist/alias.cjs",
        "types": "./dist/alias.d.ts"
      },
      "./guards": {
        "import": "./dist/guards.js",
        "require": "./dist/guards.cjs",
        "types": "./dist/guards.d.ts"
      },
      ".": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "clean": "shx rm -rf {node_modules,.turbo,dist,coverage}"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "4.0.16",
    "tsdown": "^0.18.4",
    "typescript": "^5.9.3",
    "typescript-config": "workspace:*",
    "vitest": "^4.0.16"
  }
}
