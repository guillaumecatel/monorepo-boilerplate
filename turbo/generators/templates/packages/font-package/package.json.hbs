{
  "name": "@{{organizationScopeName}}/{{kebabCase name}}",
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "description": "{{sentenceCase description}}",
  "keywords": {{{keywordsExtract description}}},
  "homepage": "{{organizationRepositoryUrl}}#readme",
  "author": "{{organizationName}} <{{organizationEmail}}>",
  "repository": {
    "type": "git",
    "url": "{{organizationRepositoryUrl}}.git"
  },
  "bugs": {
    "url": "{{organizationRepositoryUrl}}/issues"
  },
  "files": ["./dist"],
  "exports": {
    "./inter-regular.ttf": "./src/Inter-Regular.ttf",
    "./index.d.ts": "./src/index.d.ts",
    "./*": "./src/*"
  },
  "publishConfig": {
    "exports": {
      "./inter-regular.ttf": "./dist/Inter-Regular.ttf",
      "./index.d.ts": "./dist/index.d.ts",
      "./*": "./dist/*"
    }
  },
  "scripts": {
    "build": "shx mkdir -p dist && shx rm -rf dist/* && shx cp src/*.{woff,woff2,ttf,otf,eot} dist/ 2>/dev/null || true && shx cp src/index.d.ts dist/",
    "dev": "nodemon --watch src --ext woff,woff2,ttf,otf,eot,d.ts --exec 'shx mkdir -p dist && shx rm -rf dist/* && shx cp src/*.{woff,woff2,ttf,otf,eot} dist/ 2>/dev/null || true && shx cp src/index.d.ts dist/'",
    "typecheck": "tsc --noEmit",
    "clean": "shx rm -rf {node_modules,.turbo,dist}"
  },
  "peerDependencies": {},
  "dependencies": {},
  "devDependencies": {
    "nodemon": "^3.1.11",
    "typescript-config": "workspace:*"
  }
}
