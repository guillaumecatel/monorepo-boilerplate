{
  "name": "resona",
  "description": "Donner vie aux signaux et aux formes",
  "type": "module",
  "private": true,
  "author": "Resona Team <dev@resona.art> (https://resona.art)",
  "packageManager": "pnpm@10.0.0",
  "engineStrict": true,
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "build:apps": "turbo build --filter=./apps/**",
    "build:packages": "turbo build --filter=./packages/**",
    "changeset": "changeset",
    "clean": "turbo clean",
    "commitlint": "commitlint",
    "dev": "turbo dev",
    "dev:apps": "turbo dev --filter=./apps/**",
    "dev:packages": "turbo dev --filter=./packages/**",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "knip": "knip --no-exit-code",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "nuke": "pnpm clean && shx rm -rf {node_modules,.turbo}",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "publish:packages": "changeset publish",
    "syncpack": "syncpack",
    "syncpack:fix": "syncpack format && syncpack fix-mismatches",
    "test": "turbo test",
    "test:apps": "turbo test --filter=./apps/**",
    "test:packages": "turbo test --filter=./packages/**",
    "test:e2e": "turbo test:e2e",
    "test:unit": "turbo test:unit",
    "typecheck": "turbo typecheck",
    "version": "changeset version",
    "gen:app-astro": "turbo gen workspace --copy=examples/app-astro-react --destination=apps --type=app",
    "gen:app-payload": "turbo gen workspace --copy=examples/app-payload-cms --destination=apps --type=app",
    "gen:app-storybook": "turbo gen workspace --copy=examples/app-storybook-react --destination=apps --type=app",
    "gen:pkg-assets": "turbo gen workspace --copy=examples/package-assets --destination=packages --type=package",
    "gen:pkg-react": "turbo gen workspace --copy=examples/package-react --destination=packages --type=package",
    "gen:pkg-typescript": "turbo gen workspace --copy=examples/package-typescript --destination=packages --type=package"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@commitlint/cli": "20.3.0",
    "@commitlint/config-conventional": "20.3.0",
    "@resona/eslint-config-all": "workspace:*",
    "@turbo/gen": "2.7.2",
    "@types/node": "25.0.3",
    "eslint": "9.39.2",
    "husky": "9.1.7",
    "jiti": "2.6.1",
    "knip": "5.78.0",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "shx": "0.4.0",
    "syncpack": "13.0.4",
    "turbo": "2.7.2",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "tmp@<=0.2.3": ">=0.2.4",
      "js-yaml@>=4.0.0 <4.1.1": ">=4.1.1"
    }
  }
}
