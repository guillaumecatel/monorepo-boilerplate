{
  "name": "monorepo",
  "description": "",
  "type": "module",
  "license": "MIT",
  "private": true,
  "author": "Guillaume CATEL <hello@guillaumecatel.com> (http://github.com/guillaumecatel)",
  "packageManager": "pnpm@10.25.0",
  "engineStrict": true,
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "check:updates": "npm-check-updates -p pnpm --packageFile '**/package.json'",
    "clean": "turbo run clean",
    "commitlint": "commitlint",
    "dev": "turbo run dev",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "knip": "knip --no-exit-code",
    "lint": "turbo run lint && eslint .",
    "lint:fix": "turbo run lint:fix && eslint . --fix",
    "nuke": "pnpm clean && shx rm -rf {node_modules,.turbo,pnpm-lock.yaml} && pnpm i",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "publish:packages": "changeset publish",
    "syncpack": "syncpack",
    "syncpack:fix": "syncpack format && syncpack fix-mismatches",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:unit": "turbo run test:unit",
    "typecheck": "turbo run typecheck",
    "version": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@commitlint/cli": "20.3.0",
    "@commitlint/config-conventional": "20.3.0",
    "@eslint/compat": "2.0.0",
    "@eslint/config-helpers": "0.5.0",
    "@myorg/eslint-config": "workspace:*",
    "@turbo/gen": "2.7.2",
    "@types/node": "25.0.3",
    "eslint": "9.39.2",
    "husky": "9.1.7",
    "jiti": "2.6.1",
    "knip": "5.78.0",
    "lint-staged": "16.2.7",
    "npm-check-updates": "19.2.0",
    "prettier": "3.7.4",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "shx": "0.4.0",
    "syncpack": "13.0.4",
    "turbo": "2.7.2",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  }
}
